<UserControl x:Class="ProjectManager.Views.ProjectMenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button Content="Ресурсы"
                    Command="{Binding Navigation.ResourcePage}"/>
            <Button Content="Отчеты"
                    Command="{Binding Navigation.ReportsPage}"/>
            <Button Content="Диаграмма Ганта"
                    Command="{Binding Navigation.GanttChartPage}"/>
            <Button Content="Паспорт проекта"
                    Command="{Binding Navigation.ProjectPassportPage}"/>
        </StackPanel>
        <ContentControl Grid.Row="1"/>
    </Grid>
</UserControl>
