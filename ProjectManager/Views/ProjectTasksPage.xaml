<UserControl x:Class="ProjectManager.Views.ProjectMenuPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="MenuSButton" TargetType="Button" BasedOn="{StaticResource SButton}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20 10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="2" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">

            <Button Content="Задачи"
                    Command="{Binding ToProjectTasksPageCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MenuSButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsProjectTasksPageSelected}" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Ресурсы"
                    Command="{Binding ToProjectResourcePageCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MenuSButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsProjectResourcePageSelected}" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Отчеты"
                    Command="{Binding ToReportsPageCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MenuSButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsReportsPageSelected}" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Паспорт проекта"
                    Command="{Binding ToProjectPassportPageCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MenuSButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsProjectPassportPageSelected}" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Меню администратора"
                    Command="{Binding ToAdminPageCommand}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MenuSButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsAdminPageSelected}" Value="True">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="BorderBrush" Value="Black"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <ContentControl Grid.Row="1"
                        Content="{Binding NavigationService.CurrentViewModel}">
        </ContentControl>

        <GridSplitter Width="0" 
                      Grid.Row="1"/>
        <DataGrid Grid.Row="1"/>
        <TextBlock Text="Диаграмма Ганта"
                   Grid.Column="1"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
